<Window x:Class="Ross_Cuber_Timer.TimePopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ross_Cuber_Timer"
        mc:Ignorable="d"
        Title="TimePopUp" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>

        <StackPanel 
            Name="spContainer"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Label Name="lblScramble"/>
            <Label Name="lblTime"/>
            <Button Name="btnPlus2" Click="btnPlus2_Click">+2</Button>
            <Button Name="btnDNF" Click="btnDNF_Click">DNF</Button>
            <Button Name="btnCloseWindow" Click="btnCloseWindow_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>
